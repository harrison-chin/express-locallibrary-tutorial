extends layout

block content
  br
  br
  br
  br
  h2 Author: #{author.name}
  p #{author.date_of_birth} - #{author.date_of_death}
  
  div(style='margin-left:20px;margin-top:20px')

    h4 Books
    
    dl
    each book in author_books
      dt 
        a(href=book.url) #{book.title}
      dd #{book.summary}

    else
      p This author has no books.
      
  hr
  p
    a.btn.btn-primary(href=author.url+'/delete') Delete this author
  p
    a.btn.btn-primary(href=author.url+'/update') Update this author
